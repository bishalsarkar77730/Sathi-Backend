{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@packages/*": ["packages/*"],
      "@sathi/config": ["packages/config"],
      "@sathi/db": ["packages/db"],
      "@sathi/middleware": ["packages/middleware"],
      "@sathi/constants": ["packages/constants"]
    }
  }
}